<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burdeos"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <View
        android:id="@+id/guide"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCenter"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="90"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="190dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRight1"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="110"
        app:cardBackgroundColor="@color/design_default_color_secondary"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="20"
        app:layout_constraintCircleRadius="190dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRight2"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="130"
        app:cardBackgroundColor="@android:color/holo_green_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="40"
        app:layout_constraintCircleRadius="190dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRight3"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="150"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="190dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRight4"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="170"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="80"
        app:layout_constraintCircleRadius="190dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLeft1"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="70"
        app:cardBackgroundColor="@color/design_default_color_secondary"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="340"
        app:layout_constraintCircleRadius="190dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLeft2"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="50"
        app:cardBackgroundColor="@android:color/holo_green_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="320"
        app:layout_constraintCircleRadius="190dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLeft3"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="30"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="190dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLeft4"
        android:layout_width="170dp"
        android:layout_height="108dp"
        android:rotation="10"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircle="@+id/guide"
        app:layout_constraintCircleAngle="280"
        app:layout_constraintCircleRadius="190dp" />

    <AutoCompleteTextView
        android:id="@+id/actv"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/yellow"
        android:completionThreshold="1"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/edittext_hint"
        android:popupBackground="@color/dark_blue"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textColorHighlight="@color/yellow"
        android:textColorHint="@color/dark_blue"
        android:textColorLink="@color/dark_blue"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,TextContrastCheck" />



</androidx.constraintlayout.motion.widget.MotionLayout>